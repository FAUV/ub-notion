{
  "name": "ub-notion-control-center",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "cap:init": "npx cap init ub-notion com.fauv.ubnotion --web-dir=out --npm-client=npm || true",
    "cap:copy": "npx cap copy",
    "cap:sync": "npx cap sync",
    "ios:add": "npx cap add ios",
    "ios:open": "npx cap open ios",
    "build:ios": "npm run build && npm run cap:copy && npm run ios:open",
    "discover": "DOTENV_CONFIG_PATH=.env.local tsx -r dotenv/config scripts/discover-notion.ts",
    "validate": "DOTENV_CONFIG_PATH=.env.local tsx -r dotenv/config scripts/validate-ub.ts"
  },
  "dependencies": {
    "@capacitor/core": "^6.1.0",
    "@notionhq/client": "^2.3.0",
    "@tanstack/query-sync-storage-persister": "^5.56.2",
    "@tanstack/react-query-persist-client": "^5.56.2",
    "lucide-react": "^0.460.0",
    "next": "14.2.33",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.12.7",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.0",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.2",
    "autoprefixer": "^10.4.20",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.33",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20 <23"
  }
}